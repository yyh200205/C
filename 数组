//逐级输出字符串因素
#include<stdio.h>
#include<stdlib.h>
int main()
{
    char arr[]="abcdef";
    int i=0;
    for(i=0;i<6;i++)
    {
        printf("%c ",arr[i]);
    }
    system("pause");
    return 0;
}

#include<stdio.h>
#include<stdlib.h>
int main()
{
    int arr[3][4]={1,2,3,4,5,6,7,8,9,0,11,12};
    int i=0;
    for(i=0;i<3;i++)
    {
        for(int j=0;j<4;j++)
        {
            printf("%-2d ",arr[i][j]);
        }
        printf("\n");
    }
    system("pause");
    return 0;
}

//冒泡排序
void bubble_sort(int arr[])
{
    int a=0;
    for(int i=0;i<10;i++)
    {
        for(int j=0;j<9-i;j++)
        {
            if(arr[j]>arr[j+1])
            {
                a=arr[j];
                arr[j]=arr[j+1];
                arr[j+1]=a;
            }
        }
    }
}
int main()
{
    int arr[10]={3,4,2,7,5,1,6,10,9,8};
    bubble_sort(arr);
    int i=0;
    for(i=0;i<10;i++)
    {
        printf("%d ",arr[i]);
    }
    system("pause");
    return 0;
}

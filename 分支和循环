int main()
{
	int ret = 0;
	char password[20] = { 0 };
	printf("请输入密码:");
	scanf_s("%s",password);
	getchar();
	//缓冲区还剩余一个'\n'
	//所以需要一个语句把'\n'读取走
	printf("请确认:");
	ret = getchar();
	if (ret == 'Y')
	{
		printf("确认成功!");
	}
	else
	{
		printf("密码错误!");
	}
	return 0;
}

#include<stdio.h>
#include<string.h>
int main()
{
	int ret = 0;
	int ch = 0;
	char password[20] = { 0 };
	printf("请输入密码:");
	scanf_s("%s",password);
	//缓冲区还剩余一个'\n'
	//所以需要一个语句把'\n'读取走
	while (ch=getchar() != '\n')
	{
		;
	}
	printf("请确认:");
	ret = getchar();
	if (ret == 'Y')
	{
		printf("确认成功!");
	}
	else
	{
		printf("密码错误!");
	}
	return 0;
}

int main()
{
	int ch = 0;
	while ((ch = getchar()) != EOF)
	{
		if (ch < '0' || ch>'9')
			continue;
		putchar(ch);
	}
	return 0;
}

#include<stdio.h>
#include<stdlib.h>
int main()
{
    for(int i=1;i<=10;i++)
    {
        printf("%d\n",i);
    }
    system("pause");
    return 0;
}

int main()
{
    int x,y;
    for(x=0,y=0;x<2&&y<5;++x,y++)
    {
        printf("hehe\n");
    }
    system("pause");
    return 0;
}

//循环0次
int main()
{
    int k=0;
    int i=0;
    for(i=0,k=0;k=0;i++,k++)
    k++;
    system("pause");
    return 0;
}

//n!
int main()
{
    int n=0;
    int s=1;
    int m=0;
    printf("请输入m的值:");
    scanf("%d",&m);
    for(n=1;n<=m;n++)
    {
        s=s*n;
    }
    printf("%d\n",s);
    system("pause");
    return 0;
}
//n!的和
int main()
{
    int n=0;
    int sum=0;
    int m=0;
    int s=1;
    printf("请输入m的值:");
    scanf("%d",&m);
    for(n=1;n<=m;n++)
    {
        s=s*n;
        sum=sum+s;
    }
    printf("%d\n",s);
    printf("%d\n",sum);
    system("pause");
    return 0;
}

//数组匹配
int main()
{
    int arr[]={1,2,3,4,5,6,7,8,9};
    int i=0;
    for(i=0;i<10;i++)
    {
        if(arr[i]==7)
        {
            printf("%d\n",i);
        }
    }
    system("pause");
    return 0;
}

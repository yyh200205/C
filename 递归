#include<stdio.h>
#include<stdlib.h>
#include<string.h>
void print(int n)
{
    if(n>9)
    {
        print(n/10);
    }
    printf("%d ",n%10);
}
int main()
{
    unsigned int num=0;
    printf("请输入数值:");
    scanf("%d",&num);
    print(num);
    system("pause");
    return 0;
}

//求字符串长度
int my_strlen(char* str)
{
    int count=0;
    while(*str!='\0')
    {
        count++;
        str++;
    }
    return count;
}
int main()
{
    char arr[]="bit";
    int len=my_strlen(arr);
    printf("%d\n",len);
    system("pause");
    return 0;
}

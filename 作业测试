//分数求和
#include<stdio.h>
#include<stdlib.h>
int main()
{
    int i=0;
    double sum=0;
    for(i=1;i<=100;i++)
    {
        if(i%2==1)
        {
            sum=sum+1.0/i;
        }
        else
        {
            sum=sum-1.0/i;
        }
    }
    printf("%lf\n",sum);
    system("pause");
    return 0;
}

//求出10个数中最大的数
int main()
{
    int i=0;
    int max=0;
    int a=0;
    for(i=0;i<10;i++)
    {
        scanf("%d",&a);
        if(max<=a)
        {
            max=a;
        }
    }
    printf("%d\n",max);
    system("pause");
    return 0;
}
但是这个会出现问题，如果十个数都没有0大就会出现最大值是0的结果，所以可以用数组，然后把数组的第一个值赋给max

//9*9乘法口诀表
int main()
{
    int i=0;
    int j=0;
    for(i=1;i<10;i++)
    {
        for(j=1;j<=i;j++)
        {
            printf("%d*%d=%-2d ",i,j,i*j);//-2d意味着结果是两位数，且左对齐
        }
        printf("\n");
    }
    system("pause");
    return 0;
}

猜数字游戏
#include<stdio.h>
#include<stdlib.h>
#include<time.h>
//猜数字游戏
//1、电脑会生成一个随机数
//2、猜数字
void menu()
{
    printf("*****************************\n");
    printf("******1.play****0.exit*******\n");
    printf("*****************************\n");
}
//RAND_MAX--rand函数能返回随机数的最大值
void game()
{
    int random_num=rand()%100+1;
    int input=0;
    while(1)
    {
        printf("请输入数字:");
        scanf("%d",&input);
        if(input>random_num)
        {
            printf("猜大了\n");
        }
        else if(input<random_num)
        {
            printf("猜小了\n");
        }
        else
        {
            printf("恭喜你,猜对了\n");
            break;
        }
    }
}
int main()
{
    int input=0;
    srand((unsigned)time(NULL));
    do
    {
        menu();
        printf("请选择:");
        scanf("%d",&input);
        switch (input)
        {
        case 1:
            game();
            break;
        case 0:
            break;
        default:
            printf("选择错误,请重新输入！\n");
            break;
        }
    } while (input);
    return 0;
}

//goto语句实现关机
int main()
{
    char input[10]={0};
    system("shutdown -s -t 60");
again:
    printf("电脑将在一分钟内关机，如果输入：我是猪，就取消关机！\n请输入：");
    scanf("%s",input);
    if(strcmp(input,"我是猪"))
    {
        system("shutdown -a");
    }
    else
    {
        goto again;
    }
    system("pause");
    return 0;
}

//判断是否是闰年
int is_leap_year(int x)
{
    if(x%100==0)
    {
        if(x%400==0)
        {
            return 1;
        }
        else
        {
            return 0;
        }
    }
    else if(x%4==0)
    {
        return 1;
    }
    else
    {
        return 0;
    }
}
int main()
{
    int year=0;
    printf("请输入年份:");
    scanf("%d",&year);
    if(is_leap_year(year)==1)
    {
        printf("是闰年\n");
    }
    else
    {
        printf("不是闰年\n");
    }
    system("pause");
    return 0;
}
